<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/myPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="20dp"
            android:src="@drawable/default_photo_bg" />

        <ImageView
            android:id="@+id/myPhoto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp" />

        <ImageView
            android:id="@+id/takephoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/myPhoto"
            android:layout_alignRight="@+id/myPhoto"
            android:paddingBottom="25dp"
            android:paddingRight="10dp"
            android:src="@drawable/take_photo" />

        <TextView
            android:id="@+id/resumeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/myPhoto"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:text="我的简历"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/resumeUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resumeName"
            android:layout_toRightOf="@+id/myPhoto"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:text="@string/updateDate" />

        <TextView
            android:id="@+id/resumeUpdateValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/resumeUpdate"
            android:layout_alignTop="@+id/resumeUpdate"
            android:layout_toRightOf="@+id/resumeUpdate"
            android:paddingBottom="8dp"
            android:paddingLeft="5dp"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/resumeFinishStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/resumeUpdate"
            android:layout_below="@+id/resumeUpdate"
            android:layout_toRightOf="@+id/myPhoto"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:text="@string/finishStatus" />

        <TextView
            android:id="@+id/resumeFinishStatusValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/resumeFinishStatus"
            android:layout_alignTop="@+id/resumeFinishStatus"
            android:layout_toRightOf="@+id/resumeFinishStatus"
            android:paddingBottom="8dp"
            android:paddingLeft="5dp"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/resumePublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/resumeFinishStatus"
            android:layout_below="@+id/resumeFinishStatus"
            android:layout_toRightOf="@+id/myPhoto"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:text="简历状态" />

        <TextView
            android:id="@+id/resumePublicValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/resumePublic"
            android:layout_alignTop="@+id/resumePublic"
            android:layout_toRightOf="@+id/resumePublic"
            android:paddingBottom="8dp"
            android:paddingLeft="5dp"
            android:textColor="@color/blue" />

        <!-- <ImageView
            android:id="@+id/resumePreviewasdfasf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/resumePublicValue"
            android:layout_marginRight="5dp"
            android:paddingBottom="10dp"
            android:src="@drawable/resume_preview_bg"
            android:visibility="invisible"
            android:clickable="false"
             /> -->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout"
        android:layout_alignRight="@+id/relativeLayout"
        android:layout_below="@+id/relativeLayout"
        android:background="@color/white"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/editResumeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:paddingBottom="6dp"
            android:paddingLeft="8dp"
            android:paddingTop="6dp"
            android:text="@string/editResume"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/resumeModifyImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editResumeText"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/resume_modify_bg" />

        <Button
            android:id="@+id/resumeModifyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editResumeText"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/resumeModifyImg"
            android:background="#00000000"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:text="@string/modify"
            android:textColor="@drawable/btn_text_color"
            android:textSize="18dp" />

        <!--
             <Button
            android:id="@+id/resumeDeleteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editResumeText"
            android:layout_marginRight="35dp"
            android:layout_marginTop="17dp"
            android:background="#00000000"
            android:paddingTop="6dp"
            android:text="@string/delete"
            android:textColor="@drawable/btn_text_color"
            android:textSize="18dp" />
        -->

        <Button
            android:id="@+id/resumePreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editResumeText"
            android:layout_marginRight="35dp"
            android:layout_marginTop="17dp"
            android:background="#00000000"
            android:paddingTop="6dp"
            android:text="@string/preview"
            android:textColor="@drawable/btn_text_color"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/resumePreviewImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editResumeText"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/resumePreview"
            android:paddingRight="8dp"
            android:src="@drawable/resume_preview2_bg" />

        <ImageView
            android:id="@+id/resumeRefreshImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/resumeModifyImg"
            android:layout_below="@+id/resumeModifyImg"
            android:layout_marginTop="35dp"
            android:paddingBottom="25dp"
            android:src="@drawable/resume_update_bg" />

        <Button
            android:id="@+id/resumeFefreshText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/resumeModifyText"
            android:layout_below="@+id/resumeModifyText"
            android:layout_marginTop="33dp"
            android:layout_toRightOf="@+id/resumeRefreshImg"
            android:background="#00000000"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:text="@string/refresh"
            android:textColor="@drawable/btn_text_color"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/resumeIsPublicImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/resumePreviewImg"
            android:layout_below="@+id/resumePreviewImg"
            android:layout_marginTop="35dp"
            android:paddingBottom="25dp"
            android:src="@drawable/resume_is_public_bg" />

        <Button
            android:id="@+id/resumeIsPublicText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resumePreview"
            android:layout_marginTop="33dp"
            android:layout_toRightOf="@+id/resumeIsPublicImg"
            android:background="#00000000"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:text="@string/set_public"
            android:textColor="@drawable/btn_text_color"
            android:textSize="18dp" />
    </RelativeLayout>

</RelativeLayout>