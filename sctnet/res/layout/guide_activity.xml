        <TextView 
            android:layout_width="40dp"
            android:layout_height="7dp"
            android:background="#7f000000"
            />
        <TextView 
            android:layout_width="40dp"
            android:layout_height="7dp"
            android:layout_marginLeft="5dp"
            android:background="#7f000000"
            />
        <TextView 
            android:layout_width="40dp"
            android:layout_height="7dp"
            android:layout_marginLeft="5dp"
            android:background="#7f000000"
            />
        <TextView 
            android:layout_width="40dp"
            android:layout_height="7dp"
            android:layout_marginLeft="5dp"
            android:background="#7f000000"
            />
    </LinearLayout>

</RelativeLayout>