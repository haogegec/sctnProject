<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginRoot"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/login_useless_layout"
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/login_relative_layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_marginTop="30.0dip"
        android:paddingTop="21.0dip" >

        <LinearLayout
            android:id="@+id/true_name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/linear_layout"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/true_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/lightBlack"
                android:text="姓       名" />
            <EditText
                android:id="@+id/true_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@null"
                android:textSize="15dp"
                android:hint="请输入您的真实姓名"
                android:padding="10dp" />
        </LinearLayout>
        
        
        <RelativeLayout
            android:id="@+id/birthday"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/item_selector"
            android:layout_below="@+id/true_name"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/birthday_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/lightBlack"
                android:text="出生日期" />

            <TextView
                android:id="@+id/birthday_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/birthday_text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="请选择您的出生日期"
                android:text="" />

            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"
                android:shadowColor="#ffffffff"
                android:shadowDx="0.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:src="@drawable/arrow" >
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>

   
    <Button
        android:id="@+id/search_btn"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/blue_button_selector"
        android:enabled="true"
        android:shadowColor="#7f000000"
        android:shadowDx="0.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:text="搜     索"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>