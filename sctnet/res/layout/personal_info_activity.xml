<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/background"
    android:orientation="vertical"
    >
    <TextView 
        android:id="@+id/personal_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="@string/personalName"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="7dp"/>
    <EditText 
        android:id="@+id/personal_name_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="@color/blue"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:layout_below="@+id/personal_name_text"/>
    <Button 
        android:id="@+id/sex_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/personal_name_value"
        android:layout_alignTop="@+id/personal_name_value"
        android:layout_alignBottom="@+id/personal_name_value"
        android:background="@color/blue"
        android:text="å¥³"
        android:textColor="@color/white"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
    <RelativeLayout 
          android:id="@+id/relativeLayout1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/personal_name_value"
          android:layout_alignLeft="@+id/personal_name_value"
          android:layout_alignRight="@+id/personal_name_value"
          android:background="@color/white"
          >
          <TextView 
              android:id="@+id/persional_info_notes"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:textColor="@color/white"
              android:background="@color/blue"
              android:textSize="18dp"
              android:text="@string/personalInfoActivityTitle"
              android:paddingTop="8dp"
              android:paddingLeft="8dp"
              android:paddingBottom="8dp"/>
     <com.sctn.sctnet.view.ItemView
         android:id="@+id/itemview1"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/persional_info_notes"
         />
     <com.sctn.sctnet.view.ItemView
         android:id="@+id/itemview2"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/itemview1"
         />
     <com.sctn.sctnet.view.ItemView
         android:id="@+id/itemview3"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/itemview2"
         />
      <com.sctn.sctnet.view.ItemView
         android:id="@+id/itemview4"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/itemview2"
         />    
    </RelativeLayout> 
    <RelativeLayout 
          android:id="@+id/relativeLayout2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/relativeLayout1"
          android:layout_alignLeft="@+id/relativeLayout1"
          android:layout_alignRight="@+id/relativeLayout1"
          android:background="@color/white"
          android:layout_marginTop="20dp"
          >
          <TextView 
              android:id="@+id/paper_info_notes"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:textColor="@color/white"
              android:background="@color/blue"
              android:textSize="18dp"
              android:text="@string/paperInfoNote"
              android:paddingTop="8dp"
              android:paddingLeft="8dp"
              android:paddingBottom="8dp"/>
     <com.sctn.sctnet.view.ItemView
         android:id="@+id/itemview11"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/paper_info_notes"
         />
     <com.sctn.sctnet.view.ItemView
         android:id="@+id/itemview12"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/itemview11"
         />
      <com.sctn.sctnet.view.ItemView
         android:id="@+id/itemview13"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/itemview12"
         />    
    </RelativeLayout> 
</RelativeLayout>